<link rel="stylesheet" href="/css/home.css">

<nav class="navbar bg-transparent justify-content-between " style="color:white">
    <a class="navbar-brand" style="margin:0 auto">
        <h1 id="title-text">Restaurant Finder</h1>
    </a>
</nav>


<div class="container text-center login-container">
    <button type="button" class="btn  btn-lg btn-block client-btn" style="text-decoration:none">Client
        Interface</button>
    <a href="" class="btn btn-lg btn-block admin-btn mb-4 " data-toggle="modal"
        data-target="#modalLoginForm">Administrator Interface</a>
</div>


<div class="modal fade" id="modalLoginForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h4 class="modal-title w-100 font-weight-bold">Log In</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body mx-3">
                <div class="md-form mb-5">
                    <i class="fas fa-envelope prefix grey-text"></i>
                    <input type="text" id="username" class="form-control validate">
                    <label data-error="wrong" data-success="right" for="username">Username</label>
                </div>

                <div class="md-form mb-4">
                    <i class="fas fa-lock prefix grey-text"></i>
                    <input type="password" id="password" class="form-control validate">
                    <label data-error="wrong" data-success="right" for="password">Password</label>
                </div>

            </div>
            <div class="modal-footer d-flex justify-content-center">
                <button type="submit" class="btn btn-default" id="login">Login</button>
            </div>
        </div>
    </div>
</div>